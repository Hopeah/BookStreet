<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %>'s Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
</head>
<body class="bg-dark text-light">

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid m-2">
            <a href="/" class="navbar-brand">Project0</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><button type="button" class="btn btn-outline-secondary"><a href="/dashboard/literature" class="text-decoration-none link-light">My Literature</a></button></li>
                    <li class="nav-item"><button type="button" class="btn btn-outline-secondary"><a href="/dashboard/lists" class="text-decoration-none link-light">My Libraries</a></button></li>
                    <li class="nav-item"><button type="button" class="btn btn-outline-secondary"><a href="/dashboard/feed" class="text-decoration-none link-light">Feed</a></button></li>
                    <li class="nav-item"><button type="button" class="btn btn-outline-secondary"><a href="/register/logout" class="text-decoration-none link-light">Logout</a></button></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container row">

        <div class="col">
            <div class="d-flex flex-row">
                <h2 class="me-2">Libraries</h2>

                <!-- Adding a list (of documents/readings) -->
                <a href="#" class="bi bi-plus-circle h-25" role="button" data-bs-toggle="modal" data-bs-target="#addList"></a>
            </div>
                        
            <div class="modal fade" id="addList" tabindex="-1" aria-labelledby="addListLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content bg-dark">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addListLabel">List Information</h5>
                        </div>
                        <div class="modal-body">
                            <form action="/dashboard/createList" id="addingList" class="d-flex flex-column" enctype="multipart/form-data" method="POST">
                                <input class="bg-dark" type="text" placeholder="List Name*" name="name">
                                <label for="documents">Literature included in the list*</label>
                                <select class="bg-dark" name="documents" id="documents" multiple>
                                    <% docs.forEach(el => { %>
                                    <option name="documents[]" value="<%= el._id %>"> <%= el.title %> </option>
                                    <% }) %>
                                </select>
                                <textarea class="bg-dark" name='description' placeholder="List Description"></textarea>
                                <label for="formFile">Cover/image*:</label>
                                <input class="bg-dark" type="file" name="file" id="formFile">
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Maybe later</button>
                            <button type="submit" form="addingList" class="btn btn-primary" data-bs-dismiss="modal">Add to my lists</button>
                        </div>
                    </div>
                </div>
            </div>

            <ul class="list-unstyled row"> 
                <li class="col-3">
                    <span>Title</span>
                </li>
                <li class="col-5">
                    <span>Description</span>
                </li>
                <li class="col-1">
                    <span>Delete</span>
                </li>
                <li class="col-1">
                    <span>Update</span>
                </li>
            </ul>

            <% lists.forEach(el => { %>
            <ul class="list-unstyled row">
                <li class="col-3">
                    <a href="/post/<%= el._id %>"><%= el.name %></a>
                </li>
                <li class="col-5">
                    <span> <%= el.description %> </span>
                </li>
                <li class="col-1">
                    <button type="button" class="btn btn-outline-light bi bi-trash" data-bs-toggle="modal" data-bs-target="#delete-<%= el.name %>">
                    </button>

                    <div class="modal fade" id="delete-<%= el.name %>" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content bg-dark">
                                <div class="modal-body">
                                    Are you sure you want to delete <span class="text-highlight"><%= el.name %></span> from your libraries?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">I changed my mind</button>
                                    <form action="/post/deleteList/<%= el._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="col-1">
                    <button type="button" class="btn btn-outline-light bi bi-pencil" data-bs-toggle="modal" data-bs-target="#update-<%= el._id %>">
                    </button>

                    <div class="modal fade" id="update-<%= el._id %>" tabindex="-1" aria-labelledby="updateListLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content bg-dark">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="updateListLabel">Library Information</h5>
                                </div>
                                <div class="modal-body">
                                    <form action="/post/updateList/<%= el._id %>?_method=PUT" id="updateList-<%= el._id %>" class="d-flex flex-column" enctype="multipart/form-data" method='POST'>
                                        <input class="bg-dark" type="text" placeholder="List Name*" name="name" value="<%= el.name %>">
                                        <label for="documents">Literature included in the list*</label>
                                        <select class="bg-dark" name="documents" id="documents" multiple>
                                            <% docs.forEach(el => { %>
                                            <option name="documents[]" value="<%= el._id %>"> <%= el.title %> </option>
                                            <% }) %>
                                        </select>
                                        <textarea class="bg-dark" name='description' placeholder="List Description"><%= el.description %></textarea>
                                        <label for="formFile">Cover/image:</label>
                                        <input class="bg-dark" type="file" name="file" id="formFile">
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Go back</button>
                                    <button type="submit" form="updateList-<%= el._id %>" class="btn btn-primary" data-bs-dismiss="modal">Change</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
            <% }) %>
        </div>
    </div>

    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>