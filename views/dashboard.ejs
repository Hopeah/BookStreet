<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %>'s Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-dark text-light">

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid m-2">
            <a href="/" class="navbar-brand">Project0</a>

            <a href="/register/logout">Logout</a>
        </div>
    </nav>


    <h1>Welcome, <%= name %>!</h1>

    <h2>Reading entry</h2>
    <form action="/dashboard/createDoc" method='POST'>
        <input type="text" placeholder="Title" name='title'>
        <input type="text" placeholder="Author(s)" name='author'>
        <input type="text" placeholder="Genre" name='genre'>
        <label for="status">Reading status:</label>
        <select name="status" id="status">
            <option name="status" value="Active">Active</option>
            <option name="status" value="Paused">Paused</option>
            <option name="status" value="Finished">Finished</option>
            <option name="status" value="Future">Future</option>
        </select>
        <input type="text" placeholder="Link" name='link'>
        <textarea name='notes' placeholder="Place for your comments/review/notes"></textarea>
        <label for="rating">Rating (1 being the worst, 5 being the best)</label>
        <input type="number" id="rating" name='rating' min="1" max="5">
        <input type="submit">
    </form>

    <h2>Reading list</h2>
    <% docs.forEach(el => { %>
    <ul>
        <li>
            <span> <%= el.title %> </span>
        </li>
        <li>
            <span> <%= el.status %> </span>
        </li>
        <li>
            <span> <%= el.notes %> </span>
        </li>
    </ul>
    <% }) %>

    <h2>List entry</h2>
    <form action="/dashboard/createList" method="POST">
        <input type="text" placeholder="List Name" name="name">
        <label for="documents">Reading included in the list</label>
        <select name="documents" id="documents" multiple>
            <% docs.forEach(el => { %>
            <option name="documents[]" value="<%= el._id %>"> <%= el.title %> </option>
            <% }) %>
        </select>
        <textarea name='description' placeholder="List Description"></textarea>
        <input type="submit">
    </form>

    <h2>List of lists</h2>
    <% lists.forEach(el => { %>
    <ul>
        <li>
            <span> <%= el.name %> </span>
        </li>
        <li>
            <% for (let i=0; i < el.documents.length; i++) { %>
                <% docs.forEach(ele => { %>
                    <% if (ele._id == el.documents[i].split(', ')[0]) { %>
                        <span><%= ele.title %></span>
                <%  } %>
                <% }) %>
            <% } %>
        </li>
        <li>
            <span> <%= el.description %> </span>
        </li>
    </ul>
    <% }) %>


    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>