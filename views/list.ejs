<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= list.name %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-dark text-light">

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid m-2">
            <a href="/" class="navbar-brand">Project0</a>

            <a href="/register/logout">Logout</a>
        </div>
    </nav>


    <h1><%= list.name %>!</h1>

    <h2>Created by</h2>
    <span><%=user.name%></span>
    <% if (!user.avatar) { %>
    <img src="/images/avatar.png" alt="avatar image">
    <% } else if (user.avatar) { %>
    <img src="<%=user.avatar%>" alt="avatar image">
    <% } %>

    <span><%= list.description %></span>

    <% for (let i=0; i < list.documents.length; i++) { %>
        <% docs.forEach((ele, index) => { %>
            <% if (ele._id == list.documents[i].split(', ')[0]) { %>
                <!-- <span><%= ele.title %></span> -->
                <span data-bs-toggle="modal" data-bs-target="#doc-<%= index %>"> <%= ele.title %> </span>
                    <div class="modal fade" id="doc-<%= index %>" tabindex="-1" aria-labelledby="docLabel-<%= index %>" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content bg-dark">
                            <div class="modal-header">
                              <h5 class="modal-title" id="docLabel-<%= index %>"><%= ele.title %></h5>
                              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <img src="<%= ele.image %>" >
                                <span> <%= ele.author %> </span>
                                <span> <%= ele.status %> </span>
                                <span> <%= ele.genre %> </span>
                                <span> <%= ele.notes %> </span>
                                <span> <%= ele.rating %> </span>
                                <a href="<%= ele.link %>" class="text-decoration-none link-light" target=”_blank”>Get</a>
                            </div>
                          </div>
                        </div>
                    </div>
            <%  } %>
        <% }) %>
    <% } %>

    <img src="<%= list.image %>">

    <div>
        <button type="button" class="btn btn-outline-secondary"><a href="/dashboard/feed" class="text-decoration-none link-light">Return to Feed</a></button>
    </div>

    <div>
        <button type="button" class="btn btn-outline-secondary"><a href="/dashboard" class="text-decoration-none link-light">Return to Dashboard</a></button>
    </div>

    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>